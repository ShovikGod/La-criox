<div class="container-fluid ls">
    <div class="row align-items-center h-100">
      <div class="col-md-5 m-auto">
        <div class="card card-body px-5 pb-4 pt-3 ls-card">
          <h1 class="b-name mb-5 text-center">La'croix</h1>
          <h2 class="text-white">Forgot Password</h2>
          <% include ./partials/messages %>
          <form class="ls-form" action="/users/forgot-password" method="POST">
            <div class="form-group">
              <label for="email" class="text-white">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Enter Email"
              />
            </div>
            <p class="ext mt-2"></p>
            <button type="submit" class="btn btn-primary ls-btn">Send OTP</button>
          </form>
          
          <p class="ext mt-5">
            Still remember your password? <a href="/users/login">Login</a>
          </p>
        </div>
      </div>
    </div>
  </div>
  
  