<div class="container-fluid ls wow fadeIn" data-wow-duration="1s">
  <div class="row align-items-center h-100">
    <div class="col-md-5 m-auto">
      <div class="card px-5 pb-4 pt-3 ls-card wow fadeInUp">
        <div class="card-header d-flex align-items-end justify-content-center wow fadeInDown">
          <img src="/images/logo.png" width="80" height="80" alt="logo">
          <h1 class="b-name text-center d-inline-block">La'criox</h1>
        </div>
        <div class="card-body wow fadeInUp">
          <h2 class="text-white">Forgot Password</h2>
          <% include ./partials/messages %>
          <form class="ls-form" action="/users/forgot-password" method="POST">
            <div class="form-group">
              <label for="email" class="text-white">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Enter Email"
              />
            </div>
            <div class="form-group mt-3">
              <label class="text-white" for="sq">Secret Question</label>
              <select name="sq" class="custom-select form-control" id="sq">
                <option selected>Select you security question</option>
                <option value="In what city were you born?">In what city were you born?</option>
                <option value="What high school did you attend?">What high school did you attend?</option>
                <option value="What is your mother's maiden name?">What is your mother's maiden name?</option>
                <option value="What was your favorite food as a child?">What was your favorite food as a child?</option>
                <option value="What is the name of your first school?">What is the name of your first school?</option>
              </select>
            </div>
            <div class="form-group mt-3">
              <label class="text-white" for="sans">Secret Answer</label>
              <input
                type="text"
                id="sans"
                name="sans"
                class="form-control"
                placeholder="Enter Answer"
                value="<%= typeof sans != 'undefined' ? sans : '' %>"
              />            
            </div>
            <p class="ext mt-2"></p>
            <button type="submit" class="btn btn-primary ls-btn">Submit</button>
          </form>
          
          <p class="ext mt-5">
            Still remember your password? <a href="/users/login">Login</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
  