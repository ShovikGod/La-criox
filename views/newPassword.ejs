<div class="container-fluid ls wow fadeIn" data-wow-duration="1s">
    <div class="row align-items-center h-100">
      <div class="col-md-5 m-auto">
        <div class="card px-5 pb-4 pt-3 ls-card wow fadeInUp">
          <div class="card-header d-flex align-items-end justify-content-center">
            <img src="/images/logo.png" width="80" height="80" alt="logo">
            <h1 class="b-name text-center d-inline-block">La'criox</h1>
          </div>
          <div class="card-body wow fadeInDown" data-wow-duration="0.5s">
            <h2 class="text-white">Create New Password</h2>
            <% include ./partials/messages %>
            <form class="ls-form" action="/users/new-password" method="POST">
              <div class="form-group">
                <label for="password" class="text-white">New Password</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  placeholder="Enter new password"
                  value="<%= typeof password != 'undefined' ? password : '' %>"
                />
              </div>
              <div class="form-group">
                <label for="password2" class="text-white">Confirm New Password</label>
                <input
                  type="password"
                  id="password2"
                  name="password2"
                  class="form-control"
                  placeholder="Confirm password"
                  value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                />
              </div>
              <p class="ext mt-2"></p>
              <button type="submit" class="btn btn-primary ls-btn">Change Password</button>
            </form>
          </div>
        </div>
      </div>
    </div>
</div>